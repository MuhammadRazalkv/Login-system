<% include('../layouts/header.ejs') %>
    <link rel="stylesheet" href="/styleS.css">
<title>Sign Up page</title>
    <div class="box">
        <span class="borderline"></span>
        <form method="post" onsubmit="return validateForm()">
            <h2>Sign up</h2>
            <% if (typeof message !== 'undefined') { %>
                <p style="color: red;margin-top: 10px;"><%= message %></p>
            <% } %>
            <div class="inputBox">
                <input type="text" name="name" id="name" required>
                <span>Username</span>
                <i></i>
            </div>
            <div class="inputBox">
                <input type="email" name="email" id="email" required>
                <span>Email</span>
                <i></i>
            </div>
            <div class="inputBox">
                <input type="number" name="mob" id="mob" required>
                <span>Mobile Number</span>
                <i></i>
            </div>
            <div class="inputBox">
                <input type="password" name="password" id="password" required>
                <span>Password</span>
                <i></i>
            </div>
            <input type="submit" value="Register">
            <div class="links">
                <p style="color:#8f8f8f; font-size: smaller;">Already a user? <a href="/login" style="color:#0d47a1;">Login</a></p>
            </div>
        </form>
    </div>
    
    <script>
        function validateForm() {
            var iName = document.getElementById('name').value.trim();
            var iEmail = document.getElementById('email').value.trim();  
            var iMob = document.getElementById('mob').value.trim();
            var ipassword = document.getElementById('password').value.trim();
    
            if (iName === '' || iEmail === '' || iMob === '' || ipassword === '') {
                alert("White spaces are not allowed in any field");
                return false; // Prevent form submission
            }
            return true; // Allow form submission
        }
    </script>
    


